		"@lucia-auth/adapter-sqlite": "^3.0.0",
		"better-sqlite3": "^9.3.0",
		"drizzle-orm": "^0.29.3",
		"lucia": "^3.0.1",
		"nodemailer": "^6.9.9",
		"oslo": "^1.0.4"
	}
